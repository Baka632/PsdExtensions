<Window
    x:Class="PsdExtensions.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PsdExtensions.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:PsdExtensions.Wpf.ViewModels"
    Title="Baka632 的 PSD 扩展"
    Width="600"
    Height="400"
    MinWidth="400"
    MinHeight="200"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    mc:Ignorable="d">
    <ScrollViewer
        Padding="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <StackPanel>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Height="50"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Source="/Assets/PsdExtensions.png" />

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock FontSize="20" Text="Baka632 的 PSD 扩展" />
                    <TextBlock>
                        <Hyperlink Click="OnNavigateGitHubLinkClicked" NavigateUri="https://github.com/Baka632/PsdExtensions">GitHub 仓库地址</Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <Expander
                Margin="0,0,0,10"
                Header="扩展安装状态"
                IsExpanded="True">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        Foreground="{Binding PsdExtensionStatusTextBrush, Mode=OneWay}"
                        Text="{Binding PsdExtensionStatusText, Mode=OneWay}" />

                    <Button Command="{Binding PsdExtensionActionButtonCommand, Mode=OneWay}" Content="{Binding PsdExtensionActionButtonText, Mode=OneWay}" />
                </StackPanel>
            </Expander>

            <Expander Header="提示" IsExpanded="True">
                <TextBlock TextWrapping="Wrap">
                    <Run Text="建议在安装/卸载扩展后重启计算机，以应用更改及防止卸载后文件残留。" />
                    <LineBreak />
                    <Run Text="也可以直接在任务管理器中重启文件资源管理器，这样便不必重启计算机。" />
                </TextBlock>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Window>
