<Window
    x:Class="PsdExtensions.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PsdExtensions.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Baka632 的 PSD 扩展"
    Width="500"
    Height="400"
    MinWidth="400"
    MinHeight="200"
    d:DataContext="{d:DesignInstance Type=local:MainWindow}"
    mc:Ignorable="d">
    <ScrollViewer Padding="10">
        <StackPanel>
            <StackPanel Margin="0,0,0,20">
                <TextBlock FontSize="20" Text="Baka632 的 PSD 扩展" />
                <TextBlock>
                    <Hyperlink Click="OnNavigateGitHubLinkClicked" NavigateUri="https://github.com/Baka632/PsdExtensions">GitHub 仓库地址</Hyperlink>
                </TextBlock>
            </StackPanel>

            <Expander
                Margin="0,0,0,10"
                Header="扩展安装状态"
                IsExpanded="True">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock
                            Foreground="#6ccb5f"
                            Text="已安装"
                            Visibility="{Binding IsPsdExtensionsRegistered, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                        <TextBlock Text="未安装" Visibility="{Binding IsPsdExtensionsRegistered, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true, Mode=OneWay}" />
                    </Grid>

                    <Grid>
                        <Button
                            Click="OnInstallButtonClicked"
                            Content="安装"
                            Visibility="{Binding IsPsdExtensionsRegistered, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=true, Mode=OneWay}" />
                        <Button
                            Click="OnUninstallButtonClicked"
                            Content="卸载"
                            Visibility="{Binding IsPsdExtensionsRegistered, Converter={StaticResource BoolToVisibilityConverter}, Mode=OneWay}" />
                    </Grid>
                </StackPanel>
            </Expander>

            <Expander Header="提示" IsExpanded="True">
                <TextBlock TextWrapping="Wrap">
                    <Run Text="建议在安装/卸载扩展后重启计算机，以应用更改及防止卸载后文件残留。" />
                    <LineBreak />
                    <Run Text="也可以直接在任务管理器中重启文件资源管理器，这样便不必重启。" />
                </TextBlock>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</Window>
